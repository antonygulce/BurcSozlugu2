<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_padding_aralik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageBurcLogo"
                android:layout_width="@dimen/logo_burc_uzunluk"
                android:layout_height="@dimen/logo_burc_uzunluk"
                android:layout_marginStart="@dimen/card_padding_aralik"
                android:layout_marginTop="@dimen/card_padding_aralik"
                android:layout_marginBottom="@dimen/card_padding_aralik"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtBurcAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_padding_aralik"
                android:textColor="@color/design_default_color_primary"
                android:textSize="@dimen/txt_size_basliklar"
                app:layout_constraintStart_toEndOf="@+id/imageBurcLogo"
                app:layout_constraintTop_toTopOf="@+id/imageBurcLogo"
                tools:text="@string/ornek_burc_ismi" />

            <TextView
                android:id="@+id/txtTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_padding_aralik"
                app:layout_constraintStart_toStartOf="@+id/txtBurcAdi"
                app:layout_constraintTop_toBottomOf="@+id/txtBurcAdi"
                tools:text="@string/ornek_burc_tarih" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>