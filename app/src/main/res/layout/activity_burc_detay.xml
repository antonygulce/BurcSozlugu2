<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BurcDetayActivity">


    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgKapak"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kapak_burc_uzunluk"
            app:srcCompat="@drawable/kapak_ikizler" />

        <TextView
            android:id="@+id/txtBaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/txt_padding"
            android:text="@string/baslik_yazisi"
            android:textColor="@color/basliklar_txt_renk"
            android:textSize="@dimen/txt_size_basliklar"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/txt_padding"
            android:text="@string/detay_yazisi"
            android:textColor="@color/detay_txt_renk"
            android:textSize="@dimen/txt_size_detay" />

        <TextView
            android:id="@+id/txtBaslik2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/txt_padding"
            android:text="@string/gunlukyorum_yazisi"
            android:textColor="@color/basliklar_txt_renk"
            android:textSize="@dimen/txt_size_basliklar"
            android:textStyle="bold" />

        <WebView
            android:id="@+id/webViewGunluk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/txt_padding"
            />
    </LinearLayout>



    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>